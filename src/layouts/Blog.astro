---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
import {
  SITE_TITLE,
  SITE_DESCRIPTION,
  SITE_ICP,
  SITE_MPS_BEIAN,
} from "../consts";

interface Props {
  title?: string;
  description?: string;
}

const { title = SITE_TITLE, description = SITE_DESCRIPTION } = Astro.props;
---

<!doctype html>
<html lang="zh-cn">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <!-- <meta name="description" content={description} /> -->
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body
    class="bg-stone-50 text-stone-800 font-sans antialiased min-h-screen flex flex-col"
  >
    <header
      class="bg-white/80 backdrop-blur-md border-b border-stone-200 sticky top-0 z-50"
    >
      <nav
        class="max-w-3xl mx-auto px-4 sm:px-6 h-16 flex items-center justify-between"
      >
        <a
          href="/"
          class="text-lg font-semibold tracking-tight hover:text-stone-600 transition-colors"
        >
          {SITE_TITLE}
        </a>
        <div class="flex gap-6 text-sm text-stone-600">
          <a href="/" class="hover:text-stone-900 transition-colors">首页</a>
        </div>
      </nav>
    </header>

    <main class="flex-grow max-w-3xl w-full mx-auto px-4 sm:px-6 py-12">
      <slot />
    </main>

    <footer
      class="max-w-3xl mx-auto px-4 sm:px-6 py-8 w-full border-t border-stone-200 text-center text-stone-500 text-xs"
    >
      <div class="space-y-1">
        <div>&copy; {new Date().getFullYear()} {SITE_TITLE}.</div>
        {
          (SITE_ICP || SITE_MPS_BEIAN) && (
            <div class="flex justify-center gap-4">
              {SITE_ICP && (
                <a
                  href="https://beian.miit.gov.cn/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:underline"
                >
                  {SITE_ICP}
                </a>
              )}
              {SITE_MPS_BEIAN && (
                <a
                  href="https://beian.mps.gov.cn/"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="hover:underline"
                >
                  {SITE_MPS_BEIAN}
                </a>
              )}
            </div>
          )
        }
      </div>
    </footer>
  </body>
</html>
